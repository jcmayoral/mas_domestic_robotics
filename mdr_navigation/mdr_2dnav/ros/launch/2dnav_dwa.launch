<?xml version="1.0"?>
<launch>

    <arg name="robot" default="$(optenv ROBOT !!ROBOT NOT SET!!)" />
    <arg name="robot_env" default="$(optenv ROBOT_ENV !!ROBOT_ENV NOT SET!!)" />
    <arg name="robot_pkg" default="mas_cob_bringup" />

    <!-- delete old parameters -->
    <rosparam command="delete" param="/move_base"/>

    <!-- common navigation launch file -->
    <include file="$(find mdr_2dnav)/ros/launch/nav_common.launch">
        <arg name="robot_env" value="$(arg robot_env)" />
    </include>

    <!-- move_base navigation -->
    <node pkg="move_base" type="move_base" respawn="true" name="move_base" output="screen">
        <!-- Remap from cmd_vel to care-o-bot 3 base controller topics -->
        <remap from="cmd_vel" to="/base/twist_mux/command_navigation"/>
        <remap from="odom" to="base_controller/odometry"/>
        <remap from="~force_field_recovery/cmd_vel" to="/base/twist_mux/command_navigation"/>

        <!-- planner selection parameter -->
        <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />

        <!-- move_base parameters -->
        <rosparam file="/home/jose/ros_ws/src/mas_cob/mas_cob_bringup/config/navigation/dwa/move_base_params.yaml" command="load" />
        <rosparam file="/home/jose/ros_ws/src/mas_cob/mas_cob_bringup/config/navigation/common/robot_footprint.yaml" command="load" />

        <!-- local planner parameters (Dynamic Window Approach) -->
        <rosparam file="/home/jose/ros_ws/src/mas_cob/mas_cob_bringup/config/navigation/dwa/dwa_local_planner_params.yaml" command="load" ns="DWAPlannerROS" />

        <!-- global costmap parameters -->
        <rosparam file="/home/jose/ros_ws/src/mas_cob/mas_cob_bringup/config/navigation/common/robot_footprint.yaml" command="load" ns="global_costmap"/>
        <rosparam file="/home/jose/ros_ws/src/mas_cob/mas_cob_bringup/config/navigation/dwa/costmap_common_params.yaml" command="load" ns="global_costmap"/>
        <rosparam file="/home/jose/ros_ws/src/mas_cob/mas_cob_bringup/config/navigation/dwa/global_costmap_params.yaml" command="load" />

        <!-- local costmap parameters -->
        <rosparam file="/home/jose/ros_ws/src/mas_cob/mas_cob_bringup/config/navigation/common/robot_footprint.yaml" command="load" ns="local_costmap"/>
        <rosparam file="/home/jose/ros_ws/src/mas_cob/mas_cob_bringup/config/navigation/dwa/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="/home/jose/ros_ws/src/mas_cob/mas_cob_bringup/config/navigation/dwa/local_costmap_params.yaml" command="load" />

        <!-- recovery behavior parameters-->
        <rosparam file="/home/jose/ros_ws/src/mas_cob/mas_cob_bringup/config/navigation/recovery_behaviors/force_field_parameters.yaml" command="load" ns="force_field_recovery"/>
        <rosparam file="/home/jose/ros_ws/src/mas_cob/mas_cob_bringup/config/navigation/recovery_behaviors/clear_costmap_parameters.yaml" command="load" ns="clear_costmap_recovery"/>
    </node>

</launch>
